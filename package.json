{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
    "db:start": "docker compose --env-file .env up",
    "db:close": "docker compose down",
    "db:studio:dev": "npx prisma studio",
    "db:studio:test": "dotenv -e .env.test -- npx prisma studio",
    "db:migrate": "run-p db:migrate:*",
    "db:migrate:dev": "npx prisma migrate dev",
    "db:migrate:test": "dotenv -e .env.test -- npx prisma db push --accept-data-loss",
    "test": "run-s db:migrate:test test:int",
    "test:int": "dotenv -e .env.test -- jest --watch --no-threads"
  },
  "author": "gongzone",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^5.6.0",
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.2.0",
    "@fastify/swagger": "^8.2.0",
    "@fastify/swagger-ui": "^1.3.0",
    "@fastify/type-provider-typebox": "^2.4.0",
    "@prisma/client": "^4.6.1",
    "@sinclair/typebox": "^0.25.10",
    "ajv": "^8.12.0",
    "ajv-errors": "^3.0.0",
    "argon2": "^0.30.2",
    "cloudinary": "^1.33.0",
    "dotenv": "^16.0.3",
    "fast-jwt": "^2.0.2",
    "fastify": "^4.10.2",
    "fastify-plugin": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^9.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "dotenv-cli": "^6.0.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3"
  }
}
